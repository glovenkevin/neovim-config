{
  "coc.preferences.formatOnSave": true,

  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },
  "go.goplsOptions": {
    "semanticTokens": true
  },

  "eslint.packageManager": "yarn",
  "eslint.format.enable": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single"
}
